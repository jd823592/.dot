Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands = [ Run Weather "LKPR" ["-t","<station>: <tempC>Â°C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                        , Run DynNetwork ["-L","0","-H","32","--normal","green","--high","red"] 10
                        , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                        , Run Memory ["-t","Mem: <usedratio>%"] 10
                        , Run Swap [] 10
                        , Run Com "uname" ["-n"] "" 36000
                        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                        , Run Battery ["-t","<acstatus>","-L","10","-H","80","-l","red","-h","green","--","-O","AC Charging","-i","AC Idle","-o","Batt: <left>% <timeleft>"] 10
                        , Run DiskU [("/", "Disk: <used>/<size>")] [] 20
                        , Run Kbd [("us","<fc=red>US</fc>"),("gb", "<fc=green>UK</fc>")]
                        , Run Volume "default" "Master" [] 30
                        , Run Locks
                        , Run StdinReader
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader%}{%uname%: %cpu% | %memory% | %swap% | %disku% | %dynnetwork% | %battery% | Kbd: %kbd% %locks% | %default:Master% | <fc=#ee9a00>%date%</fc> | %LKPR% "
        }
