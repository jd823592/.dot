#!/bin/sh

export GPG_AGENT_INFO_FILE=~/.gpg-agent-info

if [ -f $GPG_AGENT_INFO_FILE ] || tty -s && ! gpg-agent -q
then
    gpg-agent --quiet --daemon --enable-ssh-support --write-env-file $GPG_AGENT_INFO_FILE
fi

source $GPG_AGENT_INFO_FILE
export GPG_AGENT_INFO
export SSH_AUTH_SOCK
export GPG_TTY=`tty`

#echo GPG agent running on $GPG_TTY
